  <div>
    <%if @public_recipes.empty?%>
            <h2>Recipes not available</h2>
    <%else%>
    <h1 class="display-4">Public Recipes</h1>
    <div class="container">
      <% @public_recipes.each do |recipe| %>
        <div class="card mb-4">
          <div class="card-body">
              <div class="card-content"> 
                <h2 class="card-title"><%= link_to recipe.name, shopping_list_index_path(recipe_id: recipe) %></h2>
                <div class="card-food"> 
                  <p class="card-text"><strong>Total Food Items:</strong> <%= recipe.recipe_foods_count%></p>
                  <% total_price = 0 %>
                  <% recipe.recipe_foods.includes(:food).each do |recipe_food| %>
                    <% total_price += recipe_food.food.price %>
                  <% end %>
                  <p><strong>Total Price:</strong> $<%=total_price %></p>
                </div>
              </div>
              <p class="card-text"><strong>By:</strong> <%= recipe.user.name %></p>
          </div>
        </div>
      <% end %>
    </div>
  <%end%>
  </div>
  